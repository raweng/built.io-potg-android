<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/builtio_login_background" >

    <!--
     ***************** This layout is for tablets **********************************
	  ***************** make necessary changes in the layout for mobile too. *******
	  ******************************************************************************
    -->

    <LinearLayout
        android:id="@+id/loginStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/loginStatusMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/builtio_login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/builtio_login_background"
        android:fillViewport="true"
        android:isScrollContainer="true" >

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- This container in-case you want to set layout gravity -->

            <ImageView
                android:id="@+id/closeLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_builtio_alertclose" />

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="65dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_builtio_logo_head" />

            <com.raweng.built.userInterface.CustomEditTextErrorField
                android:id="@+id/tenant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewLogo"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/builtio_item_background"
                android:hint="@string/builtio_prompt_tenant"
                android:inputType="text|number"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/signUpEditTextContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tenant" >

                <com.raweng.built.userInterface.CustomEditTextErrorField
                    android:id="@+id/emailLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/builtio_item_background"
                    android:hint="@string/builtio_prompt_email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:singleLine="true" />
            </RelativeLayout>

            <com.raweng.built.userInterface.CustomEditTextErrorField
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUpEditTextContainer"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/builtio_item_background"
                android:hint="@string/builtio_prompt_password"
                android:imeActionLabel="@string/builtio_action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/loginInButton"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_below="@id/password"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/builtio_item_background_button_selector"
                android:text="@string/builtio_log_in"
                android:textColor="@color/builtio_login_button_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/googleInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginInButton"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/builtio_or_you_can_login_with"
                android:textColor="@color/login_text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/googleTwitterButtonContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/googleInfo" >

                <Button
                    android:id="@+id/logInWithGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/builtio_item_background_button_selector"
                    android:text="@string/builtio_google_login"
                    android:textColor="@color/builtio_login_button_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/logInWithTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/builtio_item_background_button_selector"
                    android:text="@string/builtio_twitter_login"
                    android:textColor="@color/builtio_login_button_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/signUpInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/googleTwitterButtonContainer"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/builtio_dont_have_an_account_yet"
                android:textColor="@color/login_text_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_below="@id/signUpInfo"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/builtio_item_background_button_selector"
                android:text="@string/builtio_sign_up"
                android:textColor="@color/builtio_login_button_color"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/forgotpasswordImageView"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/password"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/password"
                android:layout_marginRight="40dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_builtio_forgot_question"
                android:visibility="visible" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>